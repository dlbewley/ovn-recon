{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": [
            "dom",
            "esnext"
        ],
        "jsx": "react",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@console/*": [
                "node_modules/@openshift-console/dynamic-plugin-sdk/lib/api/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "webpack.config.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}